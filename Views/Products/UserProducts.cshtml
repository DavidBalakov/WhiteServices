@model IEnumerable<Diploma.Models.ViewModels.Products.ProductViewModel>

@{
    ViewData["Title"] = "My Products";
}

<div class="page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1>My Products</h1>
                <p>View and manage your registered appliances</p>
            </div>
            <div class="col-md-6 text-md-end">
                <a asp-action="Create" class="btn btn-light">
                    <i class="bi bi-plus-circle me-2"></i>Add Product
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">My Products</h4>
            <div class="d-flex">
                <div class="input-group">
                    <input type="text" id="productSearch" class="form-control" placeholder="Search products...">
                    <button class="btn btn-light" type="button">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0" id="userProductsTable">
                    <thead>
                        <tr>
                            <th>Serial Number</th>
                            <th>Brand</th>
                            <th>Model</th>
                            <th>Type</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var product in Model)
                            {
                                <tr>
                                    <td>@product.SerialNumber</td>
                                    <td>@product.Brand</td>
                                    <td>@product.Model</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-primary" data-bs-toggle="tooltip" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-controller="Order" asp-action="Create" asp-route-productId="@product.Id" class="btn btn-outline-success" data-bs-toggle="tooltip" title="Create Order">
                                                <i class="bi bi-tools"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-4">
                                    <div class="empty-state">
                                        <i class="bi bi-box empty-state-icon"></i>
                                        <h5>No Products Found</h5>
                                        <p class="text-muted">You don't have any registered products yet.</p>
                                        <a asp-action="Create" class="btn btn-primary">Register New Product</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Search functionality
            $("#productSearch").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#userProductsTable tbody tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
            
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}