@model Diploma.Models.ViewModels.Products.ProductViewModel

<div class="row justify-content-center">
    <div class="col-6">
        <div class="card mt-2">
            <div class="card-header text-white bg-primary">
                <h2>@(Model.Id != null ? $"Редактирай продукт: {Model.SerialNumber}": "Добави продукт")</h2>
            </div>
            <div class="card-body">
                <form asp-controller="Списък на продуктите" asp-action="@(Model.Id != null ? "Обнови" : "Създай")" method="post">
                    <input type="hidden" asp-for="Id" />
                   
                    <div asp-validation-summary="All"></div>

                    <div class="row mb-3 p-1">
                        <label asp-for="SerialNumber" class="p-0"></label>
                        <input asp-for="SerialNumber" class="form-control" />
                        <span asp-validation-for="SerialNumber" class="text-danger"></span>
                    </div>
                    <div class="row mb-3 p-1">
                        <label asp-for="Brand" class="p-0"></label>
                        <input asp-for="Brand" class="form-control" />
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>
                    <div class="row mb-3 p-1">
                        <label asp-for="Model" class="p-0"></label>
                        <input asp-for="Model" class="form-control" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>

                    <div class="row justify-content-center">
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary form-control">@(Model.Id != null ? "Обнови" : "Създай")</button>
                        </div>
                        <div class="col-4">
                            <a asp-controller="Products" asp-action="Products" class="btn btn-outline-secondary form-control">Go to list</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 