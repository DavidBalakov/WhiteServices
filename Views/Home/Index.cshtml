    <div class="col-md-3 col-sm-6 mb-4">
        <div class="stat-card active">
            <i class="bi bi-tools stat-icon text-danger"></i>
            <div class="stat-value">24</div>
            <div class="stat-label">Активни поръчки</div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-4">
        <div class="stat-card completed">
            <i class="bi bi-check-circle stat-icon text-success"></i>
            <div class="stat-value">18</div>
            <div class="stat-label">Завършени поръчки</div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-4">
        <div class="stat-card pending">
            <i class="bi bi-clock stat-icon text-warning"></i>
            <div class="stat-value">7</div>
            <div class="stat-label">Чакащи поръчки</div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-4">
        <div class="stat-card customers">
            <i class="bi bi-people stat-icon text-info"></i>
            <div class="stat-value">156</div>
            <div class="stat-label">Общо клиенти</div>
        </div>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0">Видове ремонти</h5>
    </div>
    <div class="card-body">
        <div class="row d-flex justify-content-center">
            <div class="col-md-4 mb-3">
