@{
    ViewData["Title"] = "Dashboard";
}

<div class="page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1>Appliance Repair Dashboard</h1>
                <p>Manage your repair services efficiently</p>
            </div>
            <div class="col-md-6 text-md-end">
                <a href="/Order/Create" class="btn btn-light">
                    <i class="bi bi-plus-circle me-2"></i>New Repair Order
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row mb-4">
        <div class="col-md-3 col-sm-6 mb-4 mb-md-0">
            <div class="stats-card h-100">
                <div class="stats-icon bg-primary-light">
                    <i class="bi bi-tools"></i>
                </div>
                <h3 class="fs-4 mb-1">24</h3>
                <p class="text-muted mb-0">Active Orders</p>
                <div class="progress mt-3" style="height: 4px;">
                    <div class="progress-bar bg-primary" role="progressbar" style="width: 70%;" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-4 mb-md-0">
            <div class="stats-card h-100">
                <div class="stats-icon bg-success-light">
                    <i class="bi bi-check-circle"></i>
                </div>
                <h3 class="fs-4 mb-1">18</h3>
                <p class="text-muted mb-0">Completed Orders</p>
                <div class="progress mt-3" style="height: 4px;">
                    <div class="progress-bar bg-success" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-4 mb-md-0">
            <div class="stats-card h-100">
                <div class="stats-icon bg-warning-light">
                    <i class="bi bi-clock-history"></i>
                </div>
                <h3 class="fs-4 mb-1">7</h3>
                <p class="text-muted mb-0">Pending Orders</p>
                <div class="progress mt-3" style="height: 4px;">
                    <div class="progress-bar bg-warning" role="progressbar" style="width: 30%;" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-4 mb-md-0">
            <div class="stats-card h-100">
                <div class="stats-icon bg-info-light">
                    <i class="bi bi-people"></i>
                </div>
                <h3 class="fs-4 mb-1">156</h3>
                <p class="text-muted mb-0">Total Customers</p>
                <div class="progress mt-3" style="height: 4px;">
                    <div class="progress-bar bg-info" role="progressbar" style="width: 80%;" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Featured Services</h5>
            <div>
                <button class="btn btn-sm btn-outline-primary me-2" type="button" data-bs-target="#serviceCarousel" data-bs-slide="prev">
                    <i class="bi bi-chevron-left"></i>
                </button>
                <button class="btn btn-sm btn-outline-primary" type="button" data-bs-target="#serviceCarousel" data-bs-slide="next">
                    <i class="bi bi-chevron-right"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <div id="serviceCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#serviceCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#serviceCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#serviceCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="https://source.unsplash.com/random/1200x400/?washing-machine" class="d-block w-100" alt="Washing Machine Repair">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Washing Machine Repair</h5>
                            <p>Professional repair services for all washing machine brands</p>
                            <a href="#" class="btn btn-primary btn-sm">Learn More</a>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="https://source.unsplash.com/random/1200x400/?refrigerator" class="d-block w-100" alt="Refrigerator Repair">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Refrigerator Repair</h5>
                            <p>Expert refrigerator maintenance and repair services</p>
                            <a href="#" class="btn btn-primary btn-sm">Learn More</a>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="https://source.unsplash.com/random/1200x400/?furnace" class="d-block w-100" alt="Furnace Repair">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Furnace Repair</h5>
                            <p>Complete furnace diagnostics and repair services</p>
                            <a href="#" class="btn btn-primary btn-sm">Learn More</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Recent Orders</h5>
            <a href="/Order" class="btn btn-sm btn-outline-primary">View All</a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="recentOrdersTable">
