                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="#" class="btn btn-outline-primary" data-bs-toggle="tooltip" title="View"><i class="bi bi-eye"></i></a>
                                    <a href="#" class="btn btn-outline-secondary" data-bs-toggle="tooltip" title="Edit"><i class="bi bi-pencil"></i></a>
                                </div>
                            </td>
                        </tr>
