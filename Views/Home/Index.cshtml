</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var serviceCarousel = new bootstrap.Carousel(document.getElementById('serviceCarousel'), {
                interval: 5000,
                wrap: true,
                touch: true
            });
        });
    </script>
}
