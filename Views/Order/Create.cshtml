@model Diploma.Models.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Нова поръчка";
}

<div class="page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1>Създаване на поръчка</h1>
                <p>Добавете нова поръчка за ремонт</p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 text-primary">Информация за поръчката</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="ProductId" class="form-label">Продукт</label>
                            <select asp-for="ProductId" class="form-select" asp-items="ViewBag.Products">
                                <option value="">-- Изберете продукт --</option>
                            </select>
                            <span asp-validation-for="ProductId" class="text-danger"></span>
                            <div class="form-text">Изберете продукт от списъка или <a href="/Products/Create">добавете нов</a></div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="RepairType" class="form-label">Тип ремонт</label>
                            <select asp-for="RepairType" class="form-select" asp-items="Html.GetEnumSelectList<Diploma.Entities.RepairType>()">
                                <option value="">-- Изберете тип ремонт --</option>
                            </select>
                            <span asp-validation-for="RepairType" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="AdditionalNotes" class="form-label">Допълнителни бележки</label>
                            <textarea asp-for="AdditionalNotes" class="form-control" rows="4" placeholder="Опишете проблема или добавете допълнителна информация..."></textarea>
                            <span asp-validation-for="AdditionalNotes" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between mt-4">
                            <a href="/Order/UserOrders" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Отказ
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>Създай поръчка
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
        });
    </script>
}
